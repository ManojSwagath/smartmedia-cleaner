<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?android:attr/colorBackground"
    android:orientation="vertical">

    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?android:attr/colorBackground"
        app:title="@string/app_name"
        app:titleTextColor="?attr/colorOnSurface"
        app:subtitleTextColor="?attr/colorOnSurface"
        app:elevation="0dp" />

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingStart="18dp"
            android:paddingEnd="18dp"
            android:paddingTop="14dp"
            android:paddingBottom="20dp">

            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="24dp"
                app:cardElevation="2dp"
                app:strokeWidth="1dp"
                app:strokeColor="?attr/colorOutline"
                app:cardBackgroundColor="?attr/colorSurface">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="18dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/home_headline"
                        android:textColor="?attr/colorOnSurface"
                        android:textAppearance="@style/TextAppearance.App.Headline" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="6dp"
                        android:text="@string/home_subtitle"
                        android:textColor="?attr/colorOnSurface"
                        android:textAppearance="@style/TextAppearance.App.Body" />

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/analyzeButton"
                        style="@style/Widget.Material3.Button"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="14dp"
                        android:minHeight="54dp"
                        android:text="@string/scan"
                        app:icon="@android:drawable/ic_menu_search"
                        app:iconPadding="10dp" />

                    <ProgressBar
                        android:id="@+id/loadingBar"
                        style="?android:attr/progressBarStyleLarge"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="12dp"
                        android:indeterminate="true"
                        android:visibility="gone"
                        android:indeterminateTint="?attr/colorPrimary" />

                    <TextView
                        android:id="@+id/totalImagesText"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="14dp"
                        android:text="@string/total_images_placeholder"
                        android:textColor="?attr/colorOnSurface"
                        android:textAppearance="@style/TextAppearance.App.Body" />

                    <TextView
                        android:id="@+id/totalSpaceText"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="6dp"
                        android:text="@string/total_size_placeholder"
                        android:textColor="?attr/colorOnSurface"
                        android:textAppearance="@style/TextAppearance.App.Body" />

                    <TextView
                        android:id="@+id/lastScanText"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:text="@string/last_scan_placeholder"
                        android:textColor="?attr/colorOnSurface"
                        android:textAppearance="@style/TextAppearance.App.Caption" />

                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/toolsTitle"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/cleanup_tools"
                    android:textColor="?attr/colorOnSurface"
                    android:textAppearance="@style/TextAppearance.App.SectionTitle" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/settingsButton"
                    style="@style/Widget.Material3.Button.TextButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/settings"
                    app:icon="@android:drawable/ic_menu_manage"
                    app:iconPadding="6dp" />

            </LinearLayout>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/featureTiles"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="18dp"
                android:clipToPadding="false"
                android:nestedScrollingEnabled="false"
                android:overScrollMode="never" />

            <TextView
                android:id="@+id/foldersTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:text="@string/folders"
                android:textColor="?attr/colorOnSurface"
                android:textAppearance="@style/TextAppearance.App.SectionTitle" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/foldersRecycler"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:clipToPadding="false"
                android:paddingBottom="20dp" />

        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

</LinearLayout>
