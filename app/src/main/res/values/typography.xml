<resources>
    <!-- App typography (simple + consistent; uses system sans-serif to avoid bundling fonts) -->

    <style name="TextAppearance">
        <item name="android:fontFamily">sans-serif</item>
    </style>

    <style name="TextAppearance.App">
        <item name="android:fontFamily">sans-serif</item>
    </style>

    <style name="TextAppearance.App.Headline">
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="TextAppearance.App.SectionTitle">
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="TextAppearance.App.Title">
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="TextAppearance.App.Body">
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="TextAppearance.App.Caption">
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textSize">12sp</item>
    </style>
</resources>
